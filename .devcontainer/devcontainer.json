{
  "name": "jellyfin-plugin-audiotagger",
  "build": { "dockerfile": "Dockerfile" },
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/dotnet:1": { "version": "9.0" },
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-dotnettools.csdevkit",
        "ms-dotnettools.csharp",
        "github.vscode-github-actions",
        "ms-azuretools.vscode-docker",
        "redhat.vscode-yaml",
        "EditorConfig.EditorConfig"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "files.eol": "\n",
        "files.insertFinalNewline": true,
        "files.trimTrailingWhitespace": true
      }
    }
  },
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind",
    "source=nuget-cache,target=/home/vscode/.nuget/packages,type=volume",
    "source=dotnet-tools,target=/home/vscode/.dotnet/tools,type=volume"
  ],
  "containerEnv": {
    "PATH": "/home/vscode/.dotnet/tools:${PATH}"
  },
  "remoteUser": "vscode",
  "postCreateCommand": "bash -lc 'git config --global core.editor \"code --wait\"; dotnet --info; dotnet restore || true'",
  "hostRequirements": {
    "cpus": 2,
    "memory": "2gb"
  }
}
